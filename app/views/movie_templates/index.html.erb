<h1>List of all movies</h1>

<table border = "1">
     <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th></th>
    </tr>
  <% @list_of_movies.each do |a_thing|%>
    <tr>
      <td><%= a_thing.id %></td>
      <td>
        <img src="http://robohash.org/<%= a_thing.title%>">
      </td>
      <td><%= a_thing.title %></td>
      <td><%= a_thing.year %></td>
      <td></td>
      <td>
        <a href="/movies/<%= a_thing.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
