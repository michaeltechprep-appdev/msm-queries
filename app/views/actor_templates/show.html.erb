<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_actor.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>
  </small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <%= @the_actor.image %>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border = "1">
<% @characters.each do |char| %>
<% a_film = Movie.where({:id => char.movie_id }).at(0)%>
  <tr>
    <td>
      <%= a_film.title%>
    </td>
    <td>
      <%= a_film.year%>
    </td>
    <td>
      <% # d = Movie.where({ :name => a_film.actor_id }).at(0) %>
      <%= char.name %>
    </td>
   <% a_dir = Director.where({:id => a_film.director_id }).at(0)%>
   <td>
  <%= a_dir.name%> 
   </td>
    <td>
      <a href="/movies/<%=a_film.id%>">
        Show Details
      </a>
    </td>
  </tr>
<% end %>
</table>
